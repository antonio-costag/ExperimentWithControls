<Window x:Class="ExperimentWithControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentWithControls"
        mc:Ignorable="d"
        Title="Experiment With Controls" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="number" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="#" VerticalAlignment="Center" FontSize="24px"/>
        <!--tem que ser inicializado antes do TextBox, pra ele não ser null e dar erro-->

        <Label Content="Enter a number" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" Margin="10,10,0,0"/>
        <TextBox x:Name="numbeerTextBox" HorizontalAlignment="Left" Margin="10,49,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" FontSize="18px" TextChanged="numbeerTextBox_TextChanged" PreviewTextInput="numbeerTextBox_PreviewTextInput"/>

        <RadioButton Grid.Column="1" Content="1" HorizontalAlignment="Left" Margin="0,37,0,0" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" Content="2" HorizontalAlignment="Left" Margin="30,37,0,0" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" Content="3" HorizontalAlignment="Left" Margin="60,37,0,0" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" Content="4" HorizontalAlignment="Left" Margin="0,57,0,0" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" Content="5" HorizontalAlignment="Left" Margin="30,57,0,0" VerticalAlignment="Top"/>
        <RadioButton Grid.Column="1" Content="6" HorizontalAlignment="Left" Margin="60,57,0,0" VerticalAlignment="Top"/>
        
        <ListBox x:Name="MyListBox" Grid.Row="1" Margin="10,10,10,10">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="5"/>
        </ListBox>
        
        <ComboBox x:Name="readOnlyComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ComboBox>
        
        <ComboBox x:Name="editableComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="270,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" IsEditable="True">
            <ListBoxItem Content="1"/>
            <ListBoxItem Content="2"/>
            <ListBoxItem Content="3"/>
            <ListBoxItem Content="4"/>
            <ListBoxItem Content="5"/>
        </ComboBox>

    </Grid>
</Window>
